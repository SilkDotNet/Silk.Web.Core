            <!--
            </div>-->
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <sitemenu menu-name="@CoreMenus.DashboardMain" />

            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                @if (@globalViewModel.Dashboard.Name != @globalViewModel.Page.Title)
                {
                    <h1 class="page-header">@globalViewModel.Dashboard.Name <small>@globalViewModel.Page.Title</small></h1>
                }
                else
                {
                    <h1 class="page-header">@globalViewModel.Dashboard.Name</h1>
                }

                @await Html.PartialAsync("_Messages")

                @RenderBody()

            </div>

        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://twitter.github.io/typeahead.js/releases/latest/typeahead.bundle.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".typeahead").each(function () {
                var jQueryEl = $(this);
                jQueryEl.typeahead(null, {
                    display: 'displayValue',
                    source: new Bloodhound({
                        datumTokenizer: Bloodhound.tokenizers.obj.whitespace('displayValue'),
                        queryTokenizer: Bloodhound.tokenizers.whitespace,
                        remote: {
                            url: jQueryEl.attr('data-typeahead-url') + '?query=%QUERY',
                            wildcard: '%QUERY'
                        }
                    })
                });

                jQueryEl.parent("span").css("display", "block");
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
