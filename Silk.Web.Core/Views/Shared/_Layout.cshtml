@using SiteFramework.Abstractions;
@using SiteFramework.Abstractions.Menus;
@inject PageMetadata pageMetadata;
@inject ISiteContext siteContext;
@addTagHelper *, AlpacaCore.SiteFramework
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
	<title>@pageMetadata.Title - @pageMetadata.SiteName</title>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

	@if (siteContext.Site.Menus[StandardMenuNames.Default].MenuNodes.Count > 0)
	{
		<style type="text/css">
			body
			{
				padding-top: 50px;
			}
		</style>
	}
</head>
<body>
	<sitemenu menu-name="@StandardMenuNames.Default" />

	<div class="container">

		<div class="blog-header">
			<h1 class="blog-title">@siteContext.Site.SiteName</h1>
			@if (!string.IsNullOrEmpty(siteContext.Site.TagLine))
			{
				<p class="lead blog-description">@siteContext.Site.TagLine</p>
			}
		</div>

        @await Html.PartialAsync("_Messages")

		@RenderBody()

	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
